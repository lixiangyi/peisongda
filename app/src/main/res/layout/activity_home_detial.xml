<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="15dp"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/member_img_detial"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/empty_img" />

                    <TextView
                        android:id="@+id/member_name_tv_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张静"
                        android:layout_marginTop="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/member_img_detial"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/state_icon"
                        android:layout_width="40dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@id/member_name_tv_img"
                        android:layout_below="@+id/member_img_detial"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/qiuzhi_state" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/add_time_detial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="2017/04/05 16:45"
                    android:textColor="#a3a3a3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/member_content_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:lineSpacingMultiplier="1.2"
                    android:padding="10dp"
                    android:text="一句话介绍自己越详细越好一句话介绍自己越详细越好一句话介绍自己越详细越好一句话介绍自己越详细越好一句话介绍自己越详细越好一句话介绍自己越详细越好"

                    android:textColor="@color/color_333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:text="电话："
                    android:textColor="@color/color_333333"
                    android:textSize="15sp"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_goutong"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/submit_button"
        android:text="立即沟通"
        android:textColor="@color/background" />

</LinearLayout>
