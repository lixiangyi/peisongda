<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/nav_bar_bg"
                style="@style/navbar_style"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical">

    <foundation.widget.editext.ClearableEditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="45dp"
        android:layout_marginTop="@dimen/dimen_5"
        android:background="@drawable/shape_search_white_bg"
        android:drawableLeft="@mipmap/icon_search"
        android:drawablePadding="@dimen/dimen_5"
        android:focusableInTouchMode="true"
        android:hint="关键字"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:lines="1"
        android:padding="@dimen/dimen_5"
        android:textColor="#f7979797"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/nav_bar_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="14dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="14dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/nav_bar_title"
        style="@style/title_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="200dp"/>

    <ImageView
        android:id="@+id/iv_left_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:padding="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nav_bar_right_txt"
        style="@style/nav_bar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_release"
        style="@style/nav_bar_text_style"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:scaleType="center"/>

    <ImageView
        android:id="@+id/nav_bar_right_image"
        style="@style/nav_bar_text_style"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingBottom="11dp"
        android:paddingTop="11dp"/>

    <RelativeLayout
        android:id="@+id/layout_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_notifation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_notifation"
            android:gravity="center"

            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>