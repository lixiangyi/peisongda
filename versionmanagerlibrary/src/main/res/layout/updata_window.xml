<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99333333"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/roundbg_white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/title_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="升级提示"
            android:textColor="#000000"
            android:textSize="21sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ebebeb" />

        <TextView
            android:id="@+id/content_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:minHeight="80dp"
            android:textSize="15sp"
            android:text="-发现新版本，请及时更新!\n-当前版本不可用，请升级!"
            android:paddingRight="10dp"
            android:textColor="#333333" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下次再说"
                android:textColor="#999999"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/go_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="去应用市场"
                android:textColor="#2e9fff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/positive_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="right"
                android:text="下载APK"
                android:textColor="#2e9fff"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>